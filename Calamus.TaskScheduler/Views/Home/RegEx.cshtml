@model RegExModel
@{
    ViewData["Title"] = "正则表达式测试";
}
<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">正则表达式测试</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form id="form_0" class="form-horizontal" asp-controller="Home" asp-action="RegEx" method="post" onsubmit="return false;">
        <div class="card-body">
            <div class="form-group row">
                <label for="@Html.IdFor(model=> model.RegEx)" class="col-sm-2 col-form-label">正则表达式：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="RegEx" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="@Html.IdFor(model=> model.InputString)" class="col-sm-2 col-form-label">测试文本：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="InputString" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="@Html.IdFor(model=> model.Match)" class="col-sm-2 col-form-label">匹配：</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Match, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group row">
                <label for="@Html.IdFor(model=> model.Replace)" class="col-sm-2 col-form-label">替换表达式：</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Replace">
                </div>
            </div>
            <div class="form-group row">
                <label for="@Html.IdFor(model=> model.Result)" class="col-sm-2 col-form-label">结果：</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Result, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i>测试</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>

@section Scripts
{
    <script src="~/jquery.form.js"></script>
    <script>
        $(function () {
            $("#form_0").submit(function () {
                $(this).ajaxSubmit({
                    success: function (res) {
                        $("#Match").val(res.data.match);
                        $("#Result").val(res.data.result);
                    }
                });
            });
        })
    </script>
}
